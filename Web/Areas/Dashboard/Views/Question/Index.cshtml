@model QuestionVM
<a href="/dashboard/question/create" class="btn btn-outline-primary mb-3">Create</a>


<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Question datatable</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>ExamCategory</th>
                        <th>Content</th>
                        <th>IsDeleted</th>
                        <th>Answers</th>
                        <th></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>ExamCategory</th>
                        <th>Content</th>
                        <th>IsDeleted</th>
                        <th>Answers</th>
                        <th></th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var question in Model.Questions)
                    {
                        <tr>
                            <td>@question.Id</td>
                            <td>@question.ExamCategory.CategoryName</td>
                            <td>@question.Content</td>
                            <td>@question.IsDeleted</td>

                            <td>
                                @foreach (var questionanswer in Model.QuestionAnswers.Where(x => x.QuestionId == question.Id))
                                {
                                    if (questionanswer.Answer.Status)
                                    {
                                        <p class="btn btn-outline-success btn-sm my-1">@questionanswer.Answer.Option</p>
                                    }
                                    else
                                    {
                                        <p class="btn btn-outline-danger btn-sm my-1">@questionanswer.Answer.Option</p>
                                    }
                                }
                            </td>
                            <td class="col-2">
                                <a href="/dashboard/question/edit/@question.Id" class="btn btn-outline-warning">Edit</a>
                                <a href="/dashboard/question/delete/@question.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>