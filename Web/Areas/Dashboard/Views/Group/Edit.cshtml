@model Group



<div class="card shadow mb-4 py-5">
    <form method="post" class="col-6 m-auto my-3">
        <input type="text" class="form-control" value="@Model.GroupName" name="GroupName" placeholder="Group name" />
        <span>
            <label style="user-select:none" for="deleted">Is Deleted</label>
            <input id="deleted" value="true" @(Model.IsDeleted ? "checked" : null) type="checkbox" name="IsDeleted" />
        </span>
        <input type="submit" class="btn btn-outline-success mt-2" value="Edit" />
    </form>
</div>